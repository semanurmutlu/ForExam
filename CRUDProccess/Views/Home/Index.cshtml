@model IEnumerable<CRUDProccess.Models.Student>
@{
    ViewData["Title"] = "Home Page";
}
<a class="btn btn-primary" asp-action="Student" asp-route-id="null">Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">TC</th>
            <th scope="col">Address</th>
            <th scope="col">Phone</th>
            <th scope="col">Education</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
	{
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.TC</td>
            <td>@item.Address</td>
            <td>@item.Phone</td>
            <td>@item.Education</td>
            <td>@item.Status</td>
            <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
            <td>
                <a class="btn btn-success" asp-action="Student" asp-route-id="@item.Id">Güncelle</a>
            </td>
        </tr>
	}
    </tbody>
    
</table>

